/* index.wxss */
@import "/lib/style/font.wxss";

.icon-person:after {
  font-family: "iconfont";
  font-size:60rpx;
  color: #2eb012;
  content: "\e7cc"; }
.icon-course:before{
  font-family: "iconfont";
   font-size:40rpx;
  color: #e69e34;
  content: "\e7c4";
}  
.content-a {
  /* border-top:20rpx solid #000;  */
  margin-top: 20rpx;
}
.content-a .learn {
 font-size:40rpx;
}
.content-a .learn .title{
  text-align: center;
}
.content-a .learn  .learn-box{
 padding:10rpx 3%;
 width: 94%;
 display:flex;
 justify-content: space-between;
 flex-wrap: wrap;
}
.content-a .learn  .learn-box .item{
width: 48%;
height: auto;
font-size: 24rpx;
float: left;
margin-top: 20rpx;
}
.learn-box .item image{
  width: 100%;
  height: 200rpx;
  background-size: 100%;
  display: block;
}
.learn-box .item .name{
 line-height: 40rpx;
 overflow: hidden;
}
.learn-box .item .cost{
 line-height: 40rpx;
 color:#d81e06;
}